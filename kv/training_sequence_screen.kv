<TrainingSequenceScreen>:
    AnchorLayout:
        padding: ['10dp', '10dp']
        BoxLayout:
            orientation: 'vertical'
            spacing: "5dp"
            size_hint_x: 0.9
            size_hint_y: 0.9
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Seconds left for current number:'
                    Label:
                        id: label_time_left
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Number:'
                    Label:
                        id: label_numbers_count
            Label:
                text: 'Current number:'
                font_size: '32sp'
            Label:
                font_size: '32sp'
                id: label_current_number
            BoxLayout:
                orientation: 'horizontal'
                spacing: '10sp'
                Button:
                    id: button_assoc
                    text: 'Show tip'
                    on_release: app.root.current_screen.remind()
                Label:
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    id: label_assoc
                Widget:
            Widget:
            BoxLayout:
                spacing: '5dp'
                orientation: 'horizontal'
                MenuButton:
                    text: 'Cancel'
                    on_release: app.root.current_screen.on_cancel()
                MenuButton:
                    text: 'Next'
                    on_release: app.root.current_screen.to_next_number()