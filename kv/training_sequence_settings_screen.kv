#:include kv/number_group_selector.kv

<TrainingSelectionScreen>:
    AnchorLayout:
        padding: ['10dp', '10dp']
        BoxLayout:
            orientation: 'vertical'
            spacing: "5dp"
            size_hint_x: 0.9
            size_hint_y: 0.9
            Label:
                text: 'Choose training mode'
                font_size: '40sp'
            Widget:
            MenuButton:
                text: 'Number sequence'
                on_release: app.root.to_screen('training_sequence_settings')
            MenuButton:
                text: 'One big number'
                on_release: app.root.to_screen('training_one_number_settings')
            Widget:
            MenuButton:
                text: 'Back'
                on_release: app.root.to_screen('main')


<TrainingSequenceSettingsScreen>:
    AnchorLayout:
        padding: ['10dp', '10dp']
        BoxLayout:
            orientation: 'vertical'
            spacing: "5dp"
            size_hint_x: 0.9
            size_hint_y: 0.9
            NumberGroupSelector:
                size_hint_y: 0.4
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.175
                Label:
                    id: label_numbers_count
                    text: 'Numbers: 10'
                Slider:
                    min: 10
                    max: 50
                    step: 5
                    value: 10
                    on_value: app.root.current_screen.on_numbers_count_change(self.value)
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.175
                Label:
                    id: label_time_per_number
                    text: 'Seconds to remember one number: 10'
                Slider:
                    min: 5
                    max: 30
                    step: 5
                    value: 10
                    on_value: app.root.current_screen.on_time_per_number_change(self.value)
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.25
                Label:
                    size_hint_y: 0.336
                    id: label_error
                    text: ''
                    color: [1.0, 0.0, 0.0, 1.0]
                    opacity: 0
                BoxLayout:
                    size_hint_y: 0.664
                    orientation: 'horizontal'
                    spacing: '5dp'
                    MenuButton:
                        text: 'Back'
                        on_release: app.root.to_screen('training_selection')
                    MenuButton:
                        text: 'Start'
                        on_release: app.root.current_screen.validate_and_start()
