<AnswerButton@Button>
    background_color: 0, 1, 0, 1

<SequenceCheckScreen>:
    AnchorLayout:
        padding: ['10dp', '10dp']
        BoxLayout:
            orientation: 'vertical'
            spacing: "5dp"
            size_hint_x: 0.9
            size_hint_y: 0.9
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Question: '
                Label:
                    id: label_question_count
                    text: '1 out of 10'
            Widget:
            Widget:
            Widget:
            Widget:
            GridLayout:
                spacing: '5dp'
                cols: 2
                AnswerButton:
                    id: answer_button_1
                    on_release: app.root.current_screen.select_answer(self.answer)
                AnswerButton:
                    id: answer_button_2
                    on_release: app.root.current_screen.select_answer(self.answer)
                AnswerButton:
                    id: answer_button_3
                    on_release: app.root.current_screen.select_answer(self.answer)
                AnswerButton:
                    id: answer_button_4
                    on_release: app.root.current_screen.select_answer(self.answer)
