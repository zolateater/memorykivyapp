<MainScreen>:
    name: 'main'
    AnchorLayout:
        padding: ['10dp', '10dp']
        BoxLayout:
            orientation: 'vertical'
            spacing: "5dp"
            size_hint_x: 0.7
            size_hint_y: 0.9
            Label: 
                text: 'The 100 List App'
                font_size: '40sp'
            MenuButton:
                text: 'How this works?'
            MenuButton:
                text: 'Your list'
                #on_release: app.root.to_list_screen(app.number_config)
            MenuButton:
                text: 'Training'
            MenuButton:
                text: 'Statistics'
            MenuButton:
                text: 'Quit'
                id: quit_button
                on_release: app.stop()

